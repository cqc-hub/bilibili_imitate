.videowrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 10rpx;
}
.view_img{
    position: relative;

}
.video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    color: white;
    align-items: center;
}
.view_img_img{
    width: 100%;
    height: 250rpx;
}
.video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
.play_count_wrap_image{
    width: 30rpx;
    height: 30rpx;
}
.play_count_wrap_image,.comment_count_row_image{
    position: relative;
    bottom: -3rpx;
}
.comment_count_row_image{
    width: 40rpx;
    height: 40rpx;
    padding: 5rpx;
}
.video_item{
    width: 48%;
    margin-bottom: 20rpx;
}